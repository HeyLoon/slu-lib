{
  "name": "@seelen-ui/lib",
  "version": "0.1.1",
  "description": "Seelen UI Library for Widgets",
  "license": "Apache-2.0",
  "exports": "./src/lib.ts",
  "tasks": {
    "build:js": "deno run -A ./scripts/build.ts",
    "build:rs": "cargo run",
    "build": "deno task build:rs && deno task build:js",
    "publish": "deno publish"
  },
  "test": {
    "include": [
      "src/**/*.test.ts"
    ]
  },
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.41.3",
    "@std/assert": "jsr:@std/assert@^1.0.8",
    "@tauri-apps/api": "npm:@tauri-apps/api@^2.1.1"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "ES2023",
      "deno.ns"
    ]
  },
  "fmt": {
    "include": [
      "src",
      "scripts"
    ],
    "lineWidth": 120,
    "singleQuote": true
  },
  "lint": {
    "include": [
      "src",
      "scripts"
    ]
  },
  "publish": {
    "include": [
      "src",
      "LICENSE",
      "readme.md"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ]
  }
}
