{
  "name": "@seelen-ui/lib",
  "version": "0.1.2",
  "description": "Seelen UI Library for Widgets",
  "license": "Apache-2.0",
  "exports": {
    ".": "./src/lib.ts",
    "./api": "./src/lib.ts",
    "./types": "./gen/types/mod.ts"
  },
  "tasks": {
    "build:npm": "deno run -A ./scripts/build_npm.ts",
    "build:rs": "deno run -A ./scripts/rust_bindings.ts",
    "build": "deno task build:rs && deno task build:npm",
    "hook": "deno run --allow-read --allow-run --allow-write https://deno.land/x/deno_hooks@0.1.1/mod.ts"
  },
  "test": {
    "include": [
      "src/**/*.test.ts"
    ]
  },
  "imports": {
    "@deno/dnt": "jsr:@deno/dnt@^0.41.3",
    "@std/assert": "jsr:@std/assert@^1.0.8",
    "@std/encoding": "jsr:@std/encoding@^1.0.5",
    "@tauri-apps/api": "npm:@tauri-apps/api@^2.1.1",
    "@seelen-ui/types": "./gen/types/mod.ts"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "ES2023"
    ]
  },
  "fmt": {
    "include": [
      "src",
      "scripts",
      "gen"
    ],
    "lineWidth": 120,
    "singleQuote": true
  },
  "lint": {
    "include": [
      "src",
      "scripts",
      "gen"
    ],
    "rules": {
      "include": [
        "explicit-function-return-type"
      ],
      "exclude": [
        "no-slow-types"
      ]
    }
  },
  "publish": {
    "include": [
      "src",
      "LICENSE",
      "readme.md"
    ],
    "exclude": [
      "src/**/*.test.ts"
    ]
  }
}