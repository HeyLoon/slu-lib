{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plugin",
  "type": "object",
  "required": [
    "id",
    "metadata",
    "plugin",
    "target"
  ],
  "properties": {
    "icon": {
      "default": "PiPuzzlePieceDuotone",
      "type": "string"
    },
    "id": {
      "$ref": "#/definitions/PluginId"
    },
    "metadata": {
      "$ref": "#/definitions/ResourceMetadata"
    },
    "plugin": true,
    "target": {
      "$ref": "#/definitions/WidgetId"
    }
  },
  "definitions": {
    "PluginId": {
      "$ref": "#/definitions/ResourceId"
    },
    "ResourceId": {
      "description": "visual id composed of the creator username and the resource name",
      "type": "string"
    },
    "ResourceMetadata": {
      "type": "object",
      "properties": {
        "author": {
          "description": "The author name of the resource",
          "default": "",
          "type": "string"
        },
        "bundled": {
          "default": false,
          "readOnly": true,
          "type": "boolean"
        },
        "description": {
          "description": "Map of language code to description. Could be a string, mapped to `en`.",
          "default": {},
          "allOf": [
            {
              "$ref": "#/definitions/ResourceText"
            }
          ]
        },
        "displayName": {
          "description": "Map of language code to display name. Could be a string, mapped to `en`.",
          "default": {},
          "allOf": [
            {
              "$ref": "#/definitions/ResourceText"
            }
          ]
        },
        "filename": {
          "default": "",
          "readOnly": true,
          "type": "string"
        },
        "portrait": {
          "default": null,
          "type": [
            "string",
            "null"
          ],
          "format": "uri"
        },
        "screenshots": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "tags": {
          "default": [],
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "ResourceText": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      ]
    },
    "WidgetId": {
      "$ref": "#/definitions/ResourceId"
    }
  }
}
