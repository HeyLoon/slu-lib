{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WegItems",
  "type": "object",
  "properties": {
    "center": {
      "default": [
        {
          "displayName": "Explorer",
          "id": "",
          "path": "C:\\Windows\\explorer.exe",
          "pinDisabled": false,
          "relaunchArgs": null,
          "relaunchIn": null,
          "relaunchProgram": "C:\\Windows\\explorer.exe",
          "subtype": "App",
          "type": "Pinned",
          "umid": null,
          "windows": []
        }
      ],
      "type": "array",
      "items": {
        "$ref": "#/definitions/WegItem"
      }
    },
    "isReorderDisabled": {
      "description": "Whether the reordering possible on the weg",
      "default": false,
      "type": "boolean"
    },
    "left": {
      "default": [
        {
          "id": "",
          "type": "StartMenu"
        }
      ],
      "type": "array",
      "items": {
        "$ref": "#/definitions/WegItem"
      }
    },
    "right": {
      "default": [
        {
          "id": "",
          "type": "Media"
        }
      ],
      "type": "array",
      "items": {
        "$ref": "#/definitions/WegItem"
      }
    }
  },
  "definitions": {
    "RelaunchArguments": {
      "anyOf": [
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "string"
        }
      ]
    },
    "WegAppGroupItem": {
      "type": "object",
      "required": [
        "handle",
        "is_iconic",
        "is_zoomed",
        "title"
      ],
      "properties": {
        "handle": {
          "type": "integer",
          "format": "int"
        },
        "is_iconic": {
          "type": "boolean"
        },
        "is_zoomed": {
          "type": "boolean"
        },
        "title": {
          "type": "string"
        }
      }
    },
    "WegItem": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "isDir",
            "type"
          ],
          "properties": {
            "displayName": {
              "description": "display name of the item",
              "default": "",
              "type": "string"
            },
            "id": {
              "description": "internal UUID to differentiate items",
              "default": "",
              "type": "string"
            },
            "isDir": {
              "description": "@deprecaed will be removed in v3, use subtype `Folder` instead.",
              "deprecated": true,
              "writeOnly": true,
              "type": "boolean"
            },
            "path": {
              "description": "path to file, forder or program.",
              "default": "",
              "type": "string"
            },
            "pinDisabled": {
              "description": "This intention is to prevent pinned state change, when this is neccesary",
              "default": false,
              "readOnly": true,
              "type": "boolean"
            },
            "relaunchArgs": {
              "description": "arguments to be passed to the relaunch program",
              "default": null,
              "anyOf": [
                {
                  "$ref": "#/definitions/RelaunchArguments"
                },
                {
                  "type": "null"
                }
              ]
            },
            "relaunchCommand": {
              "description": "@deprecaed will be removed in v3, use relaunch_program instead.",
              "deprecated": true,
              "writeOnly": true,
              "type": [
                "string",
                "null"
              ]
            },
            "relaunchIn": {
              "description": "path where ejecute the relaunch command",
              "default": null,
              "type": [
                "string",
                "null"
              ]
            },
            "relaunchProgram": {
              "description": "program to be executed",
              "default": "",
              "type": "string"
            },
            "subtype": {
              "description": "Subtype of the item (mandatory, but is optional for backward compatibility)",
              "default": "UnknownV2_1_6",
              "allOf": [
                {
                  "$ref": "#/definitions/WegItemSubtype"
                }
              ]
            },
            "type": {
              "type": "string",
              "enum": [
                "Pinned"
              ]
            },
            "umid": {
              "description": "Application user model id.",
              "default": null,
              "type": [
                "string",
                "null"
              ]
            },
            "windows": {
              "description": "Window handles in the app group, in case of pinned file/dir always will be empty",
              "default": [],
              "readOnly": true,
              "type": "array",
              "items": {
                "$ref": "#/definitions/WegAppGroupItem"
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "isDir",
            "type"
          ],
          "properties": {
            "displayName": {
              "description": "display name of the item",
              "default": "",
              "type": "string"
            },
            "id": {
              "description": "internal UUID to differentiate items",
              "default": "",
              "type": "string"
            },
            "isDir": {
              "description": "@deprecaed will be removed in v3, use subtype `Folder` instead.",
              "deprecated": true,
              "writeOnly": true,
              "type": "boolean"
            },
            "path": {
              "description": "path to file, forder or program.",
              "default": "",
              "type": "string"
            },
            "pinDisabled": {
              "description": "This intention is to prevent pinned state change, when this is neccesary",
              "default": false,
              "readOnly": true,
              "type": "boolean"
            },
            "relaunchArgs": {
              "description": "arguments to be passed to the relaunch program",
              "default": null,
              "anyOf": [
                {
                  "$ref": "#/definitions/RelaunchArguments"
                },
                {
                  "type": "null"
                }
              ]
            },
            "relaunchCommand": {
              "description": "@deprecaed will be removed in v3, use relaunch_program instead.",
              "deprecated": true,
              "writeOnly": true,
              "type": [
                "string",
                "null"
              ]
            },
            "relaunchIn": {
              "description": "path where ejecute the relaunch command",
              "default": null,
              "type": [
                "string",
                "null"
              ]
            },
            "relaunchProgram": {
              "description": "program to be executed",
              "default": "",
              "type": "string"
            },
            "subtype": {
              "description": "Subtype of the item (mandatory, but is optional for backward compatibility)",
              "default": "UnknownV2_1_6",
              "allOf": [
                {
                  "$ref": "#/definitions/WegItemSubtype"
                }
              ]
            },
            "type": {
              "type": "string",
              "enum": [
                "Temporal"
              ]
            },
            "umid": {
              "description": "Application user model id.",
              "default": null,
              "type": [
                "string",
                "null"
              ]
            },
            "windows": {
              "description": "Window handles in the app group, in case of pinned file/dir always will be empty",
              "default": [],
              "readOnly": true,
              "type": "array",
              "items": {
                "$ref": "#/definitions/WegAppGroupItem"
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "id",
            "type"
          ],
          "properties": {
            "id": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "Separator"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "id",
            "type"
          ],
          "properties": {
            "id": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "Media"
              ]
            }
          }
        },
        {
          "type": "object",
          "required": [
            "id",
            "type"
          ],
          "properties": {
            "id": {
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "StartMenu"
              ]
            }
          }
        }
      ]
    },
    "WegItemSubtype": {
      "oneOf": [
        {
          "type": "string",
          "enum": [
            "File",
            "Folder",
            "App"
          ]
        },
        {
          "description": "this is used for backward compatibility, will be removed in v3",
          "type": "string",
          "enum": [
            "UnknownV2_1_6"
          ]
        }
      ]
    }
  }
}
