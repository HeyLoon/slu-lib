  "definitions": {
    "WegAppGroupItem": {
      "type": "object",
      "required": [
        "handle",
        "title"
      ],
      "properties": {
        "handle": {
          "type": "integer",
          "format": "int"
        },
        "title": {
          "type": "string"
        }
      }
    },
    "WegItem": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "displayName",
            "id",
            "isDir",
            "path",
            "relaunchCommand",
            "type"
          ],
          "properties": {
            "displayName": {
              "description": "display name of the item",
              "type": "string"
            },
            "id": {
              "description": "internal UUID to differentiate items",
              "type": "string"
            },
            "isDir": {
              "description": "true if self.path is a folder",
              "type": "boolean"
            },
            "path": {
              "description": "Direct path to file, forder or program.",
              "type": "string"
            },
            "pinDisabled": {
              "description": "This intention is to prevent pinned state change, when this is neccesary",
              "default": false,
              "readOnly": true,
              "type": "boolean"
            },
            "relaunchCommand": {
              "description": "literal command to be executed via CMD.",
              "type": "string"
            },
            "type": {
              "type": "string",
              "enum": [
                "Pinned"
              ]
            },
            "umid": {
              "description": "Application user model id.",
              "type": [
                "string",
                "null"
              ]
            },
            "windows": {
              "description": "Window handles in the app group, in case of pinned file/dir always will be empty",
              "default": [],
              "readOnly": true,
              "type": "array",
              "items": {
                "$ref": "#/definitions/WegAppGroupItem"
              }
            }
          }
        },
        {
          "type": "object",
          "required": [
            "displayName",
            "id",
            "isDir",
            "path",
            "relaunchCommand",
            "type"
          ],
          "properties": {
            "displayName": {
              "description": "display name of the item",
              "type": "string"
            },
            "id": {
              "description": "internal UUID to differentiate items",
              "type": "string"
            },
            "isDir": {
              "description": "true if self.path is a folder",
              "type": "boolean"
            },
            "path": {
              "description": "Direct path to file, forder or program.",
              "type": "string"
            },
            "pinDisabled": {
              "description": "This intention is to prevent pinned state change, when this is neccesary",
